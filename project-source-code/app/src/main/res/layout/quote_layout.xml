<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_quote_new_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/quote_add_hint"
            android:layout_weight="3"
            />
        <Button
            android:id="@+id/btn_quote_new_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quote_add_submit"
            android:onClick="btnOnSubmitNewQuoteItem"
            android:layout_weight="1"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/quoteContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

</LinearLayout>
