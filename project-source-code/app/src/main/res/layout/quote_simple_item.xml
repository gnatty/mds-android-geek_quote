<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_quote"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_quote_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/tv_quote_date"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_quote_avatar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_quote_avatar"
        android:layout_toRightOf="@+id/iv_quote_avatar"
        android:text="quote date" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_quote_str"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_quote_date"
        android:text="quote str" />

    <RatingBar
        android:id="@+id/rb_quote_rating"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:numStars="6"
        android:rating="2.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_quote_str" />

    <Button
        android:id="@+id/btn_action_cancel"
        android:onClick="btnOnClickCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_action_remove"
        android:layout_toStartOf="@+id/btn_action_remove"
        android:text="Cancel" />

    <Button
        android:id="@+id/btn_action_remove"
        android:onClick="btnOnClickRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_action_ok"
        android:layout_toStartOf="@+id/btn_action_ok"
        android:text="Remove" />

    <Button
        android:id="@+id/btn_action_ok"
        android:onClick="btnOnClickUpdate"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="Update" />

</RelativeLayout>
